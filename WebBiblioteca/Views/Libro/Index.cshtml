@*@model IEnumerable<WebBiblioteca.Models.Libro>*@
@model PagedList.IPagedList<WebBiblioteca.Models.Libro>
@using PagedList.Mvc


@{
    ViewBag.Title = "Index";
}

<h2>Catálogo de libros</h2>

@if (User.IsInRole("Administrador"))
{
    <p>
        @Html.ActionLink("Crear nuevo libro", "Create", null, new { @class = "btn btn-success" })
    </p>
}
@using (Html.BeginForm("Index", "Libro", FormMethod.Get))
{
    <div class="form-inline mb-3">
        <div class="form-group me-2">
            @Html.TextBox("titulo", Request["titulo"], new { @class = "form-control", placeholder = "Buscar por título" })
        </div>
        <div class="form-group me-2">
            @Html.TextBox("autor", Request["autor"], new { @class = "form-control", placeholder = "Buscar por autor" })
        </div>
        <div class="form-group me-2">
            @Html.TextBox("isbn", Request["isbn"], new { @class = "form-control", placeholder = "Buscar por ISBN" })
        </div>
        <div class="form-group me-2">
            @Html.TextBox("anyo", Request["anyo"], new { @class = "form-control", placeholder = "Buscar por año", type = "number", min = "0" })
        </div>
        <div class="form-group me-2">
            @Html.DropDownList("categoriaId", (SelectList)ViewBag.Categorias, "Todas las categorías", new { @class = "form-select" })
        </div>
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            @*<th>@Html.DisplayNameFor(model => model.First().categoria.Nombre)</th>*@
            <th>Categoría</th>
            <th>@Html.DisplayNameFor(model => model.First().Titulo)</th>
            <th>@Html.DisplayNameFor(model => model.First().Autor)</th>
            @*<th>@Html.DisplayNameFor(model => model.First().Anyo)</th>*@
            <th>Año</th>
            <th>@Html.DisplayNameFor(model => model.First().ISBN)</th>
            <th>@Html.DisplayName("Disponibles")</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.categoria.Nombre</td>
                <td>@item.Titulo</td>
                <td>@item.Autor</td>
                <td>@item.Anyo</td>
                <td>@item.ISBN</td>
                <td>@item.Stock</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })

                    @if (User.IsInRole("Administrador"))
                    {
                        @: | @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @: | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
@*Paginación*@
@Html.PagedListPager(Model, page => Url.Action("Index",
    new
    {
        page,
        titulo = Request["titulo"],
        autor = Request["autor"],
        isbn = Request["isbn"],
        anyo = Request["anyo"],
        categoriaId = Request["categoriaId"]
    }),
    new PagedListRenderOptions
    {
        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
        DisplayLinkToLastPage = PagedListDisplayMode.Always,
        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
        DisplayLinkToNextPage = PagedListDisplayMode.Always,
        DisplayPageCountAndCurrentLocation = false,
        DisplayEllipsesWhenNotShowingAllPageNumbers = true,
        MaximumPageNumbersToDisplay = 5
    }
)



