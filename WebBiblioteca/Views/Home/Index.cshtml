@{
    ViewBag.Title = "Inicio";
}


<div class="container mt-5">

    <div class="jumbotron text-center bg-light p-5 rounded shadow">
        <h1 class="display-4">Bienvenido a WebBiblioteca 📚</h1>
        <p class="lead">Gestión eficiente de préstamos y libros para usuarios y administradores.</p>
        <hr class="my-4">

        @if (!User.Identity.IsAuthenticated)
        {
            <p>Accede a tu cuenta para explorar y gestionar la biblioteca.</p>
            <a class="btn btn-primary btn-lg" href="@Url.Action("Login", "Account")" role="button">Iniciar sesión</a>
        }
        else if (User.IsInRole("Administrador"))
        {
            <div class="row justify-content-center mt-4">
                <div class="col-md-3">
                    <a href="@Url.Action("Index", "Libro")" class="btn btn-outline-dark w-100 mb-2">📚 Gestionar Libros</a>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("Index", "Categoria")" class="btn btn-outline-dark w-100 mb-2">🏷 Categorías</a>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("Pendiente", "Prestamo")" class="btn btn-outline-dark w-100 mb-2">⏳ Préstamos Pendientes</a>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("Index", "Usuario")" class="btn btn-outline-dark w-100 mb-2">👥 Usuarios</a>
                </div>
            </div>
        }
        else
        {
            <div class="row justify-content-center mt-4">
                <div class="col-md-4">
                    <a href="@Url.Action("Index", "Libro")" class="btn btn-outline-success w-100 mb-2">🔎 Buscar Libros</a>
                </div>
                <div class="col-md-4">
                    <a href="@Url.Action("MisPrestamos", "Prestamo")" class="btn btn-outline-primary w-100 mb-2">📖 Mis Préstamos</a>
                </div>
            </div>
        }
    </div>

    @if (User.IsInRole("Administrador") && ViewBag.Estadisticas != null)
    {
        @Html.Partial("~/Views/Shared/Partials/_PanelEstadisticas.cshtml", (WebBiblioteca.Models.ViewModels.EstadisticasViewModel)ViewBag.Estadisticas)
    }
</div>
